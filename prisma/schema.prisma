generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pet {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  tipo String
  porte String?
  pelo String?
  
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String    @unique
  name           String
  password       String
  endereco       Endereco?
  especializacao Json[]
  createAt       DateTime  @default(now())
}

model Cliente {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String
  password String
  pet      Json[]
  createAt DateTime @default(now())
}

model Servico {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nome         String   @unique
  descricao    String
  procedimento String?
  duracao      Int
  createAt     DateTime @default(now())
}

model Agenda {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  ref       String @unique
  descricao Dias
}

type Dias {
  dia          Int
  tipo         String
  especialista Json
  obs          String
  lista        Lista[]
}

type Lista {
  nome  String
  lista Json
}

type Endereco {
  rua    String
  num    Int
  bairro String
  cidade String
}

